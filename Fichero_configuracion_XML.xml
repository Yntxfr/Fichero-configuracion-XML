<?xml version="1.0" encoding="UTF-8"?>
<configuracion>
    <!-- Configuración de la base de datos -->
    <base_de_datos>
        <host>localhost</host>
        <puerto>3306</puerto>
        <nombre>primeraBaseDeDatos</nombre>
        <usuario>primerUsuario</usuario>
        <contraseña>primUsu11--22</contraseña>
    </base_de_datos>

    <!-- Configuración del servidor web -->
    <servidor_web>
        <puerto>8080</puerto>
        <ssl habilitado="true">
            <clave>path/a/mi_clave.key</clave>
            <certificado>path/a/mi_certificado.crt</certificado>
        </ssl>
        <max_conexiones>100</max_conexiones>
        <timeout>5000</timeout>
    </servidor_web>

    <!-- Configuración adicionales -->
    <configuraciones_adicionales>
        <modo_debug>activado</modo_debug>


        
    </configuraciones_adicionales>

</configuracion>









